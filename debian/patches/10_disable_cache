+++ libgphoto2-2.3.0/libgphoto2/gphoto2-filesys.c	2007-01-13 15:04:47.733634516 +0100
@@ -1576,9 +1576,6 @@
 	CR (gp_file_set_type (file, type));
 	CR (gp_file_set_name (file, filename));
 
-	/* Cache this file */
-	CR (gp_filesystem_set_file_noop (fs, folder, file, context));
